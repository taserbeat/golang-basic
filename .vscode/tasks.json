    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            "command": "GO111MODULE=on go run main.go",
        },
        {
            "label": "test:all",
            "type": "shell",
            "command": "GO111MODULE=on go test -v -cover ./...",
        },
        {
          "label": "build",
          "type": "shell",
          "command": "GO111MODULE=on go build -o opt/main",
        }
    ]
}
